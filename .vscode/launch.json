    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'rathole'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=rathole"
                ],
                "filter": {
                    "name": "rathole",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'rathole'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rathole",
                    "--package=rathole"
                ],
                "filter": {
                    "name": "rathole",
                    "kind": "bin"
                }
            },
            "args": ["examples/iperf3/server.toml"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rathole'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rathole",
                    "--package=rathole"
                ],
                "filter": {
                    "name": "rathole",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'integration_test'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=integration_test",
                    "--package=rathole"
                ],
                "filter": {
                    "name": "integration_test",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}